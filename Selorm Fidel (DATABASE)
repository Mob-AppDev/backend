
ACTUAL CODE        
-- Users Table
CREATE TABLE users (
    id SERIAL PRIMARY KEY,
    username VARCHAR(50) NOT NULL,
    email VARCHAR(100) NOT NULL,
    password_hash VARCHAR(255) NOT NULL,
    profile_picture_url TEXT DEFAULT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

-- Channels Table
CREATE TABLE channels (
    channel_id INT PRIMARY KEY,
    nName VARCHAR(100) NOT NULL,
    is_private BOOLEAN DEFAULT FALSE,
    created_by INT,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (created_by) REFERENCES users(id)
);

-- Channel Members Table
CREATE TABLE channel_members (
    id INT PRIMARY KEY,
    channel_id INT NOT NULL,
    user_id INT NOT NULL,
    joined_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (channel_id) REFERENCES channels(channel_id),
    FOREIGN KEY (user_id) REFERENCES users(id)
);

-- Messages Table
CREATE TABLE messages (
    id INT PRIMARY KEY,
    channel_id INT NOT NULL,
    user_id INT,
    content TEXT NOT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (channel_id) REFERENCES channels(channel_id),
    FOREIGN KEY (user_id) REFERENCES users(id)
);

-- Reactions Table
CREATE TABLE reactions (
    id INT PRIMARY KEY,
    message_id INT NOT NULL,
    user_id INT NOT NULL,
    reaction_type VARCHAR(50) NOT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (message_id) REFERENCES messages(id),
    FOREIGN KEY (user_id) REFERENCES users(id)
);



SCHEMA DIAGRAM( search " dbdiagram", copy and paste the codes to view how it looks like)
// Users Table
 TABLE users {
    id SERIAL [ primary key]
    username VARCHAR(50) [not null]
    email VARCHAR(100) [not  null]
    password_hash VARCHAR(255) [not null]
    profile_picture_url TEXT [default: NULL]
    created_at TIMESTAMP [default: TRUE]
}

// Channels Table
TABLE channels{
    channel_id int [PRIMARY KEY]
    nName VARCHAR(100) [NOT NULL]
    is_private BOOLEAN [default: FALSE]
    created_by int
    created_at TIMESTAMP [default: TRUE]
}

// Channel Members Table
 TABLE channel_members{
    id int [PRIMARY KEY]
    channel_id int [not null]
    user_id int [not null]
    joined_at TIMESTAMP [default: true]
}

// Messages Table
 TABLE messages {
    id int [primary key]
    channel_id INT [not null]
    user_id INT 
    content TEXT [NOT NULL]
    created_at TIMESTAMP [default: true]
}

// Reactions Table (Optional for additional UX)
TABLE reactions {
    id int [PRIMARY KEY]
    message_id INT [not null]
    user_id INT [not null]
    reaction_type VARCHAR(50) [not null] // e.g., emoji, thumbs-up
    created_at timestamp [default: true]
}




Ref: "channels"."created_by" > "users"."id"

Ref: "channel_members"."channel_id" > "channels"."channel_id"

  

Ref: "users"."id" < "channel_members"."user_id"

Ref: "channels"."channel_id" < "messages"."channel_id"

Ref: "users"."id" < "messages"."user_id"

Ref: "messages"."id" < "reactions"."id"

Ref: "users"."id" < "reactions"."user_id"
